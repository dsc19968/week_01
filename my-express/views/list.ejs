<html>
	<head>
		<meta charset="utf-8">
		<title>添加商品页</title>
		<script type="text/javascript" src="./javascripts/jquery.min.js" ></script>
		<style type="text/css">
			html,body{
				width: 100%;
				height: 100%;
			}
			.tab{
			    width: 100%;
			    text-align: center;   
			}
			.tab  tr{
			        line-height: 40px;
			    	}
			#lab{
			    margin-top: 15px;
			}
			.operation a{
				width: 21px;
				height: 17px;
				display: inline-block;
			}
			.operation a img{
				width: 100%;
				height: 100%;
			}
			.foot{
				width: 100%;
				height: 24px;
				background: #FFFFFF;
			}
			.foot span{
				color: red;
			}
			.foot input{
				width: 30px;
			}
		</style>
	</head>
	<body>
		<!--goods_id : goodsData.goods_id;
			goods_name : goodsData.goods_name;
			goods_number : goodsData.goods_number;
			goods_price : goodsData.goods_price;
			goods_inventory : goodsData.goods_inventory;-->
		<table class="tab" border="1" cellspacing="0" cellpadding="">
	    		<tr>
	    			<td><input type="checkbox" name="" id="lab" value=""/><label for="lab">编号</label></td>
	    			<td>商品名称</td>
	    			<td>货号</td>
	    			<td>价格</td>
	    			<td>上架</td>
	    			<td>精品</td>
	    			<td>新品</td>
	    			<td>热销</td>
	    			<td>推荐排序</td>
	    			<td>库存</td>
	    			<td>虚拟销量</td>
	    			<td>操作</td>
	    		</tr>
	    		<% for(var i=0;i<docs.length;i++) {%>
					<tr>
						<td><%= docs[i].goods_id%></td>
						<td class="goods_name"><%= docs[i].goods_name%></td>
						<td><%= docs[i].goods_number%></td>
						<td><%= docs[i].goods_price%></td>
						<td></td>
						<td></td>
						<td></td>
						<td></td>
						<td></td>
						<td><%= docs[i].goods_inventory%></td>
						<td></td>
						<td class="operation">
							<a href="javascript:;"><img src="./images/icon_view.gif"/></a>
							<a href="javascript:;"><img src="./images/icon_edit.gif"/></a>
							<a href="javascript:;"><img src="./images/icon_copy.gif"/></a>
							<a class="remove" href="javascript:;"><img src="./images/icon_trash.gif"/></a>
						</td>
					</tr>
				<% } %>
	    	</table>
	    	<div class="foot">
	    		总共<span><%= num%></span>记录分为<span><%= pageNO%></span>页当前第<span><%= pageNO%></span>页，每页<input type="text" value="<%=perPageCnt %>"/>|<a href="javascript:;">第一页</a>
	    		<a class="up" href="javascript:;">上一页</a>
	    		<a class="next" href="javascript:;">下一页</a>
	    		<a href="javascript:;">最末页</a>
	    	</div>
	</body>
	<script type="text/javascript">
		//下一页
	$(".next").click(function(){
		var  pageNO = $(".foot span").eq(1).html();
		pageNO ++;
		$.ajax({
			url: "/list",
			type:"get",
			data:{
				pageNO : pageNO,
			},
			success: function(res){
				location.href = "/list?pageNO=" + pageNO;
			}
		})
	}); 
	//上一页
	$(".up").click(function(){
		var  pageNO = $(".foot span").eq(1).html();
		pageNO --;
		$.ajax({
			url: "/list",
			type:"get",
			data:{
				pageNO : pageNO,
			},
			success: function(res){
				location.href = "/list?pageNO=" + pageNO;
			}
		})
	}); 
	</script>
</html>